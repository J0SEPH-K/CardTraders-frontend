{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "jsx": "react-native",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["nativewind/types", "react", "react-native", "expo"],
    "skipLibCheck": true
  },
  "include": ["App.tsx", "src/**/*"],
  "exclude": ["cardtraders/**", "node_modules", "dist"]
}